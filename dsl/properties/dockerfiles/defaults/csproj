FROM microsoft/aspnetcore-build:2.0 AS build-env
WORKDIR /app

COPY ${FILENAME} ./
RUN dotnet restore

COPY . ./
RUN dotnet publish -c Release -o out

# build runtime image
FROM ${BASE_IMAGE:'microsoft/aspnetcore:2.0'}
WORKDIR /app
COPY --from=build-env /app/out .

EXPOSE ${PORTS:80}
<% if (ENV) { %>
ENV ${ENV}
<% } %>

CMD [${COMMAND}]
