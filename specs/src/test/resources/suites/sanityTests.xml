<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Sanity tests" parallel="false" thread-count="3">

    <test name="Configuration Tests">
        <groups>
            <run>
                <include name="Positive">
                    <classes>
                        <class name="com.electriccloud.procedures.configuration.CreateConfigurationTests"/>
                        <class name="com.electriccloud.procedures.configuration.ProvisionTests"/>
                        <class name="com.electriccloud.procedures.configuration.CheckClusterTests"/>
                    </classes>
                </include>
            </run>
        </groups>
    </test>

    <test name="Deployment Tests">
        <groups>
            <run>
                <include name="Positive">
                    <classes>
                        <class name="com.electriccloud.procedures.deployment.DeploymentTests"/>
                        <class name="com.electriccloud.procedures.deployment.MicroserviceDeploymentTests"/>
                        <class name="com.electriccloud.procedures.deployment.ApplicationDeploymentTests"/>
                    </classes>
                </include>
            </run>
        </groups>
    </test>

    <test name="Import Tests">
        <groups>
            <run>
                <include name="Positive">
                    <classes>
                        <class name="com.electriccloud.procedures.import_ms.ImportTests"/>
                    </classes>
                </include>
            </run>
        </groups>
    </test>

    <test name="Artifact2Image Tests">
        <groups>
            <run>
                <include name="Positive">
                    <classes>
                        <class name="com.electriccloud.procedures.artifact_2_image.Artifact2ImageArtifactoryTypeTests"/>
                    </classes>
                </include>
            </run>
        </groups>
    </test>

</suite>
